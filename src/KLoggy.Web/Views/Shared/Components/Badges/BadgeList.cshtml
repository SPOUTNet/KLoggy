@using KLoggy.Web.Infrastructure
@model IEnumerable<Badge>

<ul class="badge-list">
    @foreach(Badge badge in Model)
    {
        <li><a class="btn btn-info" title="@badge.Name" href="@badge.Url"><i class="fa fa-@(badge.FaName) fa-lg"></i></a></li>
    }
    @* TODO: This link needs to be generated by Url.Content when it's actually there. *@
    <li><a class="btn btn-info" href="/Feeds/Rss"><i class="fa fa-rss fa-lg"></i></a></li>
</ul>